{
    "name": "@hamworks/wp-boilerplate",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "env": "wp-env",
        "bs": "browser-sync start --config bs-config.js",
        "start": "npm run bs & npm run start:theme",
        "build": "NODE_ENV=production npm run build:theme",
        "format:js": "wp-scripts format-js ./wp-content",
        "lint:css": "wp-scripts lint-style ./wp-content/**/*.css --fix",
        "lint:js": "wp-scripts lint-js ./wp-content --fix",
        "build:theme": "wp-scripts build ./wp-content/themes/boilerplate/src/index.js --output-path=./wp-content/themes/boilerplate/build",
        "start:theme": "wp-scripts start ./wp-content/themes/boilerplate/src/index.js --output-path=./wp-content/themes/boilerplate/build"
    },
    "devDependencies": {
        "@wordpress/browserslist-config": "^2.6.0",
        "@wordpress/env": "^1.6.0",
        "@wordpress/prettier-config": "^0.3.0",
        "@wordpress/scripts": "^12.0.0",
        "browser-sync": "^2.26.7",
        "cssnano": "^4.1.10",
        "postcss-import": "^12.0.1",
        "postcss-import-resolver": "^2.0.0",
        "postcss-omit-import-tilde": "^1.0.1",
        "postcss-preset-env": "^6.7.0",
        "postcss-pxtorem": "^4.0.1"
    },
    "dependencies": {
        "normalize.css": "^8.0.1"
    }
}
